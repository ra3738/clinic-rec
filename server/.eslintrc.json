{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "jsx-quotes": ["error", "prefer-single"],
        "arrow-parens": ["error", "as-needed"],
        "object-curly-newline": "off",
        "implicit-arrow-linebreak": "off",
        "function-paren-newline": "off",
        "linebreak-style": 0
    }
}